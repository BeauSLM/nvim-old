" Note: run PlugUpdate/Install first
set termguicolors
call plug#begin('~/.vim/plugged')
Plug 'neovim/nvim-lspconfig'
Plug 'nvim-treesitter/nvim-treesitter'
" 'ray-x/go.nvim'"
Plug '~/github/go.nvim'

Plug 'liuchengxu/vim-clap', { 'do': { -> clap#installer#force_download() } }

call plug#end()

lua <<EOF
